<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ilikeyou"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ilikeyou.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ilikeyou.ProfileActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.example.ilikeyou.FriendListActivity"
            android:label="@string/title_friend_list" >
        </activity>
        <!-- 
        <activity
            android:name="com.example.ilikeyou.FriendDetailActivity"
            android:label="@string/title_friend_detail"
            android:parentActivityName=".FriendListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".FriendListActivity" />
        </activity>
        -->
        <activity android:name="com.facebook.LoginActivity"/>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>     
        
    </application>

</manifest>